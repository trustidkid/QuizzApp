<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#323232"
        android:scrollbars="horizontal">


        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:logo="@drawable/icon"
                app:title="@string/app_name">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/app_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/user_name_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_weight="@string/layout_weight"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/timer_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="@string/layout_weight"
                        android:textColor="#00ff00"
                        android:textSize="16sp"
                        android:textStyle="bold"


                        />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="#828282"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#929292"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:padding="12dp"
                        android:text="@string/no_1"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/question1_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/question_1"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <CheckBox
                        android:id="@+id/question1_optionA_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_1_option_A_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/question1_optionB_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_1_option_B_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/question1_optionC_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_1_option_C_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/question1_optionD_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_1_option_D_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#828282"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#929292"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/no_2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/question2_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/question_2"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <RadioGroup
                        android:id="@+id/radioquestion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/question2_optionA_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion2Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_2_option_A_radio_button"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/question2_optionB_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion2Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_2_option_B_radio_button"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/question2_optionC_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion2Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_2_option_C_radio_button"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/question2_optionD_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion2Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_2_option_D_radio_button"
                            android:textAppearance="?android:textAppearanceMedium"></RadioButton>
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#828282"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#929292"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/no_3"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/question3_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/question_3"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/question3_optionA_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion3Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_3_option_A_radio_button"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/question3_optionB_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion3Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_3_option_B_radio_button"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/question3_optionC_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion3Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_3_option_C_radio_button"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/question3_optionD_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:onClick="onRadioButtonQuestion3Clicked"
                            android:paddingLeft="10dp"
                            android:text="@string/question_3_option_D_radio_button"
                            android:textAppearance="?android:textAppearanceMedium"></RadioButton>
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#828282"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#929292"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/no_4"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/question4_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/question_4"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/question4_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="Your Answer here"
                    android:inputType="text"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#828282"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#929292"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/no_5"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/question5_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="12dp"
                        android:text="@string/question_5"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <CheckBox
                        android:id="@+id/question5_optionA_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_5_option_A_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/question5_optionB_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_5_option_B_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/question5_optionC_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_5_option_C_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/question5_optionD_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/question_5_option_D_check_box"
                        android:textAppearance="?android:textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="quizResult"
            android:text="@string/submit" />

    </LinearLayout>
</RelativeLayout>